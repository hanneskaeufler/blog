{
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "scripts": {
    "accessibility-test": "node accessibility-testing/accessibility-test.js",
    "approve": "backstop --config=backstop.js approve",
    "danger-ci": "danger ci",
    "heroku-postbuild": "npm run prod",
    "lint": "stylelint public/css/**/*.css",
    "local-test": "docker run --rm -v $(pwd):/src hanneskaeufler/crystal-node-ruby:0.25.1 backstop --config=/src/backstop.js test",
    "prod": "npm run create-asset-manifest",
    "test": "backstop --config=backstop.js test",
    "create-asset-manifest": "assets-manifest public ./public/mix-manifest.json",
    "watch": "create-asset-manifest && while true; do true; done"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "assets-manifest": "^1.0.3",
    "backstopjs": "^4.5.0",
    "danger": "^9.4.0",
    "danger-plugin-mentor": "^2.0.1",
    "puppeteer": "^2.1.1",
    "stylelint": "^13.3.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
