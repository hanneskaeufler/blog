{
  "license": "MIT",
  "private": true,
  "dependencies": {
    "jquery": "^3.2.1",
    "laravel-mix": "^4.0.0-beta.2",
    "normalize-scss": "^7.0.1",
    "npm": "^6.4.1",
    "rails-ujs": "^5.2.2",
    "turbolinks": "^5.2.0"
  },
  "scripts": {
    "accessibility-test": "node accessibility-testing/accessibility-test.js",
    "approve": "backstop --config=backstop.js approve",
    "danger-ci": "danger ci",
    "dev": "webpack --progress --hide-modules --color --config=node_modules/laravel-mix/setup/webpack.config.js",
    "heroku-postbuild": "npm run prod",
    "lint": "stylelint static/**/*.scss",
    "local-test": "docker run --rm -v $(pwd):/src hanneskaeufler/crystal-node-ruby:0.25.1 backstop --config=/src/backstop.js test",
    "prod": "NODE_ENV=production webpack --progress --hide-modules --color --config=node_modules/laravel-mix/setup/webpack.config.js",
    "test": "backstop --config=backstop.js test",
    "watch": "webpack --watch --progress --hide-modules --color --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "backstopjs": "^3.8.5",
    "browser-sync": "^2.26.3",
    "danger": "^6.1.9",
    "danger-plugin-mentor": "^0.8.0",
    "puppeteer": "^1.11.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
