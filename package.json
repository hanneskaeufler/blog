{
  "license": "MIT",
  "private": true,
  "dependencies": {
    "browser-sync": "^2.18.13",
    "jquery": "^3.2.1",
    "laravel-mix": "^2.1.11",
    "lost": "^8.2.0",
    "normalize-scss": "^7.0.1",
    "npm": "^6.0.1",
    "rails-ujs": "^5.1.4",
    "turbolinks": "^5.0.3"
  },
  "scripts": {
    "lint": "stylelint static/**/*.css",
    "test": "backstop test",
    "approve": "backstop approve",
    "heroku-postbuild": "bin/compile_assets build --production",
    "dev": "yarn run webpack --progress --hide-modules --color --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "yarn run webpack --watch --progress --hide-modules --color --config=node_modules/laravel-mix/setup/webpack.config.js",
    "prod": "NODE_ENV=production yarn run webpack --progress --hide-modules --color --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "/^lost-/"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "backstopjs": "^3.2.15",
    "danger": "^3.6.4",
    "danger-plugin-fixme": "^1.0.0",
    "danger-plugin-mentor": "^0.6.0",
    "danger-plugin-yarn": "^1.3.0",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
