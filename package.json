{
  "license": "MIT",
  "private": true,
  "dependencies": {
    "jquery": "^3.4.1",
    "laravel-mix": "^5.0.1",
    "normalize-scss": "^7.0.1",
    "rails-ujs": "^5.2.4",
    "turbolinks": "^5.2.0"
  },
  "scripts": {
    "accessibility-test": "node accessibility-testing/accessibility-test.js",
    "approve": "backstop --config=backstop.js approve",
    "danger-ci": "danger ci",
    "heroku-postbuild": "npm run prod",
    "lint": "stylelint src/css/**/*.scss",
    "local-test": "docker run --rm -v $(pwd):/src hanneskaeufler/crystal-node-ruby:0.25.1 backstop --config=/src/backstop.js test",
    "prod": "NODE_ENV=production webpack --progress --hide-modules --color --config=node_modules/laravel-mix/setup/webpack.config.js",
    "test": "backstop --config=backstop.js test",
    "create-asset-manifest": "assets-manifest public/ ./public/mix-manifest.json && while true; do true; done"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "assets-manifest": "^1.0.3",
    "babel-preset-env": "^1.7.0",
    "backstopjs": "^4.0.6",
    "danger": "^9.0.2",
    "danger-plugin-mentor": "^2.0.0",
    "puppeteer": "^2.1.0",
    "resolve-url-loader": "2.3.1",
    "sass": "^1.23.0",
    "sass-loader": "7.*",
    "stylelint": "^13.2.0",
    "stylelint-config-standard": "^20.0.0",
    "vue-template-compiler": "^2.6.10"
  }
}
